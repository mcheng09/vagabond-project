<div class="container">
  <div class="card-panel">


  <div class="row">
    <div class="col l4">
      <h4><%= @user.first_name %>'s Profile</h4>
      <div class="responsive-img">
        <%= image_tag(@user.avatar, :class => "profile-pic")%></img>
      </div>
      <div>
        <strong>Name: </strong><%= @user.first_name %> <%= @user.last_name %>
      </div>
      <div>
        <strong>Location:</strong> <%= @user.location %>
      </div>
      <div>
        <strong>User Since:</strong> <%= @user.created_at.strftime("%b %d, %Y") %>
      </div>
      <br>

    </div>

    <div class="col l8">
      <br>
      <div class="button white-text right">
        <a href='/users/<%= @user.id %>/edit' class="button-link">Edit Profile</a>
      </div><br>
      <br>
     <h5>Recent Posts:</h5>
     <div class="card-panel">
        <% @posts.each do |post| %>
      </br><div class="postcontainer">
          <strong>Title: <%= post.title %></strong></br>
          <strong>Posted in: </strong><a href="/cities/<%= post.city_id %>"> <%= post.city.name %></a></br>
          <%= truncate(post.description, :length => 1000) %> </br><br>
        </div>
        <% end %>
      </div>
    </div>

  </div>

</div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.3/js/materialize.min.js"></script>
